<html lang="en">

<head>
    <title>Bootstrap Example</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="/assets/font-awesome/css/font-awesome.min.css" rel="stylesheet">
    <link href="/assets/css/bootstrap.min.css" rel="stylesheet">
    <link href="/stylesheets/home.css" rel="stylesheet">

</head>

<body>
    <header>
        <div class="es-nav navbar-fixed-top ">
            <div class="home-logo">
                <a href="#">
                    <img src="/images/home/logo.png" alt="">
                </a>
            </div>
            <div class="home-menu">
                <ul>
                    <% for (let i = 0; i < category.length; i++) { %>
                        <a href="/shop/<%= category[i].name %>/1" class="text-capitalize">
                            <li>
                                <%= category[i].name %>
                            </li>
                        </a>
                        <% }; %>

                            <a href="/user/login">
                                <li>Login</li>
                            </a>
                            <a href="/user/login">
                                <li>Register</li>
                            </a>
                </ul>
            </div>
        </div>
    </header>
    <div class="home-content">
        <section>

            <div id="myCarousel" class="carousel slide" data-ride="carousel">
                <!-- Indicators -->
                <ol class="carousel-indicators">
                    <li data-target="#myCarousel" data-slide-to="0" class=""></li>
                    <li data-target="#myCarousel" data-slide-to="1" class="active"></li>
                    <li data-target="#myCarousel" data-slide-to="2" class=""></li>
                </ol>

                <!-- Wrapper for slides -->
                <div class="carousel-inner home-slide">
                    <div class="item">
                        <span style="background-image: url(/images/home/slide1.jpg)" alt="Los Angeles"></span>
                    </div>

                    <div class="item active">
                        <span style="background-image: url(/images/home/slide1.jpg)" alt="Los Angeles"></span>
                    </div>

                    <div class="item">
                        <!--<img src="/images/home/slide1.jpg" alt="New york" style="width:100%;">-->
                        <span style="background-image: url(/images/home/slide1.jpg)" alt="Los Angeles"></span>
                    </div>
                </div>

                <!-- Left and right controls -->
                <a class="left carousel-control" href="#myCarousel" data-slide="prev">
                    <span class="glyphicon glyphicon-chevron-left"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="right carousel-control" href="#myCarousel" data-slide="next">
                    <span class="glyphicon glyphicon-chevron-right"></span>
                    <span class="sr-only">Next</span>
                </a>
            </div>
        </section>
        <section>
            <div class="clearfix home-categories">
                <div class="home-categories__inner">
                    <% for (let i = 0; i < 3; i++) { %>
                        <div class="col-md-4 home-cate">
                            <div class="home-cate__inner">
                                <span class="home-cate__bg" style="background-image: url(/images/home/somi.jpg)"></span>
                                <a href="/shop/<%= category[i].name %>/1">
                                    <span class="home-cate__title text-capitalize">
                                        <%= category[i].name %>
                                    </span>
                                </a>

                            </div>
                        </div>
                        <% }; %>

                </div>
                <div class="home-categories__inner">
                        <% for (let i = 3; i < category.length; i++) { %>
                    <div class="col-sm-6 home-cate">
                        <div class="home-cate__inner">
                            <span class="home-cate__bg2" style="background-image: url(/images/home/somi.jpg)"></span>
                            <a href="/shop/<%= category[i].name %>/1">
                                <span class="home-cate__title text-capitalize">
                                        <%= category[i].name %>
                                </span>
                            </a>

                        </div>
                    </div>
                    <% }; %>
                    
                </div>
            </div>
        </section>
        <section class="es-banner">
            <span class="es-banner__bg" style="background-image: url(/images/home/banner.jpg"></span>
            <div class="es-banner__quote">
                <p class="text-uppercase text-center">"sống theo cách của eshopper - lịch sự, bảnh bao, nhã nhặn"</p>
            </div>
        </section>

        <div class="footer-bottom clearfix">


            <p class="pull-left">Copyright © 2018 E-Shopper</p>
            <p class="pull-right">iTeam - 1512510 1512519 1512545</p>


        </div>
    </div>

    <script src="/javascripts/jquery-3.3.1.min.js"></script>
    <script src="/javascripts/bootstrap-3.3.7.min.js"></script>
    <script src="/javascripts/owl.carousel.min.js"></script>


</body>

</html>