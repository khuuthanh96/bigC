<!DOCTYPE html>
<html lang="en">

<head>
    <% include ../partials/head %>
</head>
<!--/head-->

<body>
    <header id="header">
        <% include ../partials/header %>
    </header>

    <section class="account-content">
        <div class="container">
            <!--navigation-->
            <div class="col-sm-3 ">
                <div class="nav-manage-account">
                    <ul class="nav-manage-account__list">
                        <li>
                            Manage My Account
                        </li>
                        <ul>
                            <li>
                                <a href="/user/account">Information</a>
                            </li>
                            <li>
                                <a href="/user/password">Change password</a>
                            </li>
                        </ul>
                        <li>
                            <a href="#">My Orders</a>
                        </li>
                    </ul>
                </div>
            </div>
            <!--content-->
            <div class="col-sm-9 ">
                <div class="info-user">
                    <form action="#">
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group clearfix">
                                    <label class="col-sm-2 control-label">Name</label>
                                    <div class="col-sm-10">
                                        <input type="text" name="name" value="<%= user.name %>" class="form-control">
                                    </div>
                                </div>
                                <div class="form-group clearfix">
                                    <label class="col-sm-2 control-label">Email</label>
                                    <div class="col-sm-10">
                                        <input type="email" name="email" value="<%= user.email %>" class="form-control">
                                    </div>
                                </div>
                                <div class="form-group clearfix">
                                    <label class="col-sm-2 control-label">Address</label>
                                    <div class="col-sm-10">
                                        <input type="text" name="address" value="<%= user.address %>" class="form-control">
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group clearfix">
                                    <label class="col-sm-2 control-label">Phone</label>
                                    <div class="col-sm-10">
                                        <input type="number" name="phone" value="<%= user.phone %>" class="form-control">
                                    </div>
                                </div>
                                <div class="form-group clearfix">
                                    <label class="col-sm-2 control-label">Date</label>
                                    <div class="col-sm-10">
                                        <input type="text" name="birthday" value="<%= user.dayOfBirth %>" class="form-control" data-mask="99/99/9999" placeholder="dd/mm/yyyy">

                                    </div>
                                </div>
                                <div class="form-group clearfix">
                                    <label class="col-sm-2 control-label">Gender</label>
                                    <div class="col-sm-10">
                                        <select class="form-control m-b" name="sex">
                                            <% if (user.sex === "Male" ) { %>
                                                <option>Male</option>
                                                <option>Female</option>
                                                <% } else { %>
                                                    <option>Female</option>
                                                    <option>Male</option>
                                                    <% } %>

                                        </select>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="form-group clearfix">
                            <div class="col-sm-4 col-sm-offset-2">
                                
                                <a href=""><button class="btn btn-primary" type="button">Cancel</button></a> 
                                <button type="submit" class="btn btn-w-m btn-primary">Save changes</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>

    </section>

    <footer id="footer">
        <% include ../partials/footer %>
    </footer>

    <% include ../partials/js %>
</body>

</html>