<!DOCTYPE html>
<html lang="en">

<head>
    <% include ../partials/head %>
</head>
<!--/head-->

<body>
    <header id="header">
        <% include ../partials/header %>
    </header>

    <section>
        <div class="container">
            <!--navigation-->
            <div class="col-sm-2 nav-manage-account">
                <ul class="nav-manage-account__list">
                    <li>
                        <a href="#">Manage My Account</a>
                    </li>
                    <ul>
                        <li>
                            <a href="/user/account">Information</a>
                        </li>
                        <li>
                            <a href="/user/password">Change password</a>
                        </li>
                    </ul>
                    <li>
                        <a href="#">My Orders</a>
                    </li>
                </ul>
            </div>
            <!--content-->
            <div class="col-sm-10 info-user">
                <form action="/user/password" method="POST">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group clearfix">
                                <label class="control-label">Old password</label>
                                <div>
                                    <input type="password" class="form-control" name="oldPass">
                                </div>
                            </div>
                            <div class="form-group clearfix">
                                <label class="control-label">New password</label>
                                <div>
                                    <input type="password" class="form-control" name="newPass">
                                </div>
                            </div>
                            <div class="form-group clearfix">
                                <label class="control-label">Re-password</label>
                                <div>
                                    <input type="password" class="form-control">
                                </div>
                            </div>
                        </div>

                    </div>
                    <div>
                            <span class="text-danger"><%= error %></span>    
                            <span class="text-success"><%= msg %></span>
                    </div>
                    <div class="form-group clearfix">
                        <div class="col-sm-4 col-sm-offset-2">
                            <a href="/" class="btn btn-white" type="button">Cancel</a>
                            <button class="btn btn-primary" type="submit">Save changes</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>

    </section>

    <footer id="footer">
        <% include ../partials/footer %>
    </footer>

    <% include ../partials/js %>
</body>

</html>