<!DOCTYPE html>
<html lang="en">
<head>
    <% include ../partials/admin/head %>
    
    <!-- FooTable -->
    <link href="http:/localhost:3000/assets/css/plugins/footable/footable.core.css" rel="stylesheet">
</head>
<body>
<div id="wrapper">
    <% include ../partials/admin/navigation %> 
    <% include ../partials/admin/header %> 
    <!--content-->
    <div id="page-wrapper" class="gray-bg">
        <!--breakcrumb-->
        <div class="row wrapper border-bottom white-bg page-heading">
            <div class="col-lg-10">
                <h2>E-Shopper product list</h2>
                <ol class="breadcrumb">
                    <li>
                        <a href="index.html">Home</a>
                    </li>                        
                    <li class="active">
                        <strong>Product list</strong>
                    </li>
                </ol>
            </div>
            <div class="col-lg-2">

            </div>
        </div>

        <div class="wrapper wrapper-content animated fadeInRight ecommerce">

            <div class="row">
			<a type="button" class="btn btn-w-m btn-primary" style="float: right;margin-right: 15px;" href="/admin/addproduct">NEW</a>
                <div class="col-lg-12">
                    <div class="ibox">
                        <div class="ibox-content">

                            <table class="footable table table-stripped toggle-arrow-tiny" data-page-size="15">
                                <thead>
                                <tr>

                                    <th data-toggle="true">Product Name</th>
                                    <th data-hide="all">Description</th>
                                    <th data-hide="phone">Price</th>
                                    <th data-hide="phone,tablet" >Quantity</th>
                                    <th data-hide="phone">Status</th>
                                    <th class="text-right" data-sort-ignore="true">Action</th>

                                </tr>
                                </thead>
                                <tbody>
                                <% if(listProducts) { %>
                                <% listProducts.forEach(p => { %>
                                    <tr>
                                            <td>
                                               <%= p.name %>
                                            </td>
            
                                            <td>
                                                <%= p.description %>
                                            </td>
                                            <td>
                                                <%= p.price %>
                                            </td>
                                            <td>
                                                <%= p.quantityInStock %>
                                            </td>
                                            <td>
                                                <% if(p.status == "Enable") {%>
                                                    <span class="label label-primary"><%= p.status %></span>
                                                <% }else{ %>
                                                    <span class="label label-danger"><%= p.status %></span>
                                                <% } %>
                                            </td>
                                            <td class="text-right">
                                                <div class="btn-group">
                                                    <a class="btn-success btn btn-xs" href="/admin/editproduct/<%= p._id %>"> Edit </a>
                                                    <a class="btn-danger btn btn-xs" href="/admin/deleteproduct/<%= p._id %>">Delete</a>
                                                </div>
                                            </td>
                                        </tr>
                                <% })} %>
                                        
                                </tbody>
                                <tfoot>
                                <tr>
                                    <td colspan="6">
                                        <ul class="pagination pull-right"></ul>
                                    </td>
                                </tr>
                                </tfoot>
                            </table>

                        </div>
                    </div>
                </div>
            </div>
        </div>
        <% include ../partials/admin/footer %>
    </div>
</div>
<% include ../partials/admin/script %>
</body>
</html>