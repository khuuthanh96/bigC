<!DOCTYPE html>
<html lang="en">

<head>
    <% include ../partials/admin/head %>


</head>

<body>
    <div id="wrapper">
        <% include ../partials/admin/navigation %>
            <div id="page-wrapper" class="gray-bg">
                <% include ../partials/admin/header %>

                    <!--breakcrumb-->
                    <div class="row wrapper border-bottom white-bg page-heading">
                        <div class="col-lg-10">
                            <h2>E-Shopper Category List</h2>
                            <ol class="breadcrumb">
                                <li>
                                    <a href="index.html">Home</a>
                                </li>
                                <li class="active">
                                    <strong>Manage Categories</strong>
                                </li>
                            </ol>
                        </div>
                    </div>
                    <div class="wrapper wrapper-content animated fadeInRight ecommerce">

                        <div class="ibox">
                            <div class="ibox-content">
                                <form action="">
                                        <% for (let i = 0; i < category.length; i++) { %>
                                <div class="row">
                                    <div class="form-group clearfix" id="line-cate<%= i %>">
                                        <div class="col-xs-10 col-sm-8 col-md-6 ">
                                            <input type="text" disabled="" value="<%= category[i].name %>" class="form-control" id="cate<%= i %>">
                                        </div>
                                        <button class="btn btn-primary btn-circle" type="button" onclick="edit('cate<%= i %>')">
                                            <i class="fa fa-list"></i>
                                        </button>
                                        <button class="btn btn-warning btn-circle" type="button" onclick="deleteCate('line-cate<%= i %>')">
                                            <i class="fa fa-times"></i>
                                        </button>
                                    </div>
                                </div>
                                <% }; %>
                                
                                <div class="row">
                                    <div class="form-group clearfix">
                                        <div class="col-xs-10 col-sm-8 col-md-6 ">
                                            <input type="text" placeholder="New" class="form-control">
                                        </div>
                                    </div>
                                </div>
                                <div>
                                        <button type="button" class="btn btn-w-m btn-primary">SAVE</button>
                                        <button type="button" class="btn btn-w-m btn-primary">Cancel</button>
                                    </div>
                            </form>
                            </div>

                        </div>

                        
                    </div>
                    <% include ../partials/admin/footer %>
            </div>
            <!--page-wrapper-->
    </div>
    <!--wrapper-->
    <% include ../partials/admin/script %>
        <!-- Custom and plugin javascript -->
        <script>
            function edit(id){
                document.getElementById(id).removeAttribute("disabled");                
            }
            function deleteCate(id){
                var cate = document.getElementById(id);
                cate.parentNode.removeChild(cate);         
            }
        </script>
        <script>
            
        </script>

</body>

</html>