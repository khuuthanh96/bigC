<!DOCTYPE html>
<html lang="en">

<head>
    <% include ../partials/admin/head %>

        <!-- FooTable -->
        <link href="../../public/assets/css/plugins/footable/footable.core.css" rel="stylesheet">

        <link href="../../public/assets/css/plugins/datapicker/datepicker3.css" rel="stylesheet">        
</head>

<body>
    <div id="wrapper">
        <% include ../partials/admin/navigation %>
            <div id="page-wrapper" class="gray-bg">
                <% include ../partials/admin/header %>

                    <!--breakcrumb-->
                    <div class="row wrapper border-bottom white-bg page-heading">
                        <div class="col-lg-10">
                            <h2>E-Shopper product list</h2>
                            <ol class="breadcrumb">
                                <li>
                                    <a href="index.html">Home</a>
                                </li>
                                <li class="active">
                                    <strong>Orders</strong>
                                </li>
                            </ol>
                        </div>
                    </div>
                    <div class="wrapper wrapper-content animated fadeInRight ecommerce">
                        <span class="text-info"><%= msg %></span>
                        <div class="row">
                            <div class="col-lg-12">
                                <div class="ibox">
                                    <div class="ibox-content">

                                        <table class="footable table table-stripped toggle-arrow-tiny" data-page-size="15">
                                            <thead>
                                                <tr>

                                                    <th>Order ID</th>
                                                    <th data-hide="phone">Customer</th>
                                                    <th data-hide="phone">Amount</th>
                                                    <th data-hide="phone">Date added</th>
                                                    <th data-hide="phone,tablet">Date modified</th>
                                                    <th data-hide="phone">Status</th>
                                                    <th class="text-right">Action</th>

                                                </tr>
                                            </thead>
                                            <% orders.forEach(ord => { %>
                                                <tbody>
                                                        <tr>
                                                            <td>
                                                                <%= ord._id %>
                                                            </td>
                                                            <td>
                                                                <%= ord.customerId %>
                                                            </td>
                                                            <td>
                                                                <%= ord.totalPrice %>
                                                            </td>
                                                            <td>
                                                                <%= ord.requiredDate %>
                                                            </td>
                                                            <td>
                                                                <%= ord.shippedDate %>
                                                            </td>
                                                            <td>
                                                                <span class="label label-primary">Pending</span>
                                                            </td>
                                                            <td class="text-right">
                                                                <div class="btn-group">
                                                                    <a href="/admin/editorder/<%= ord._id %>" type="button" class="btn-success btn btn-xs">Edit</a>
                                                                    <a href="/admin/delorder/<%= ord._id %>" type="button" class="btn-danger btn btn-xs">Delete</a>
                                                                </div>
                                                            </td>
                                                        </tr>
                                    
                                                    </tbody>
                                            
                                            <% }) %>
                                            <tfoot>
                                                    <tr>
                                                        <td colspan="7">
                                                            <ul class="pagination pull-right"></ul>
                                                        </td>
                                                    </tr>
                                                </tfoot>
                                        </table>

                                    </div>
                                </div>
                            </div>
                        </div>

                    </div>
                    <% include ../partials/admin/footer %>
            </div>
            <!--page-wrapper-->
    </div>
    <!--wrapper-->
    <% include ../partials/admin/script %>
    <!-- Custom and plugin javascript -->
    <script src="../../public/javascripts/inspinia.js"></script>
    <script src="../../public/javascripts/plugins/pace/pace.min.js"></script>

    <!-- Data picker -->
    <script src="../../public/javascripts/plugins/datapicker/bootstrap-datepicker.js"></script>

    <!-- FooTable -->
    <script src="../../public/javascripts/plugins/footable/footable.all.min.js"></script>

    <!-- Page-Level Scripts -->
    <script>
        $(document).ready(function () {

            $('.footable').footable();

            $('#date_added').datepicker({
                todayBtn: "linked",
                keyboardNavigation: false,
                forceParse: false,
                calendarWeeks: true,
                autoclose: true
            });

            $('#date_modified').datepicker({
                todayBtn: "linked",
                keyboardNavigation: false,
                forceParse: false,
                calendarWeeks: true,
                autoclose: true
            });

        });

    </script>
</body>

</html>