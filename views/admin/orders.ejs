<!DOCTYPE html>
<html lang="en">

<head>
    <% include ../partials/admin/head %>

        <!-- FooTable -->
        <link href="../../public/assets/css/plugins/footable/footable.core.css" rel="stylesheet">

        <link href="../../public/assets/css/plugins/datapicker/datepicker3.css" rel="stylesheet">        
</head>

<body>
    <div id="wrapper">
        <% include ../partials/admin/navigation %>
            <div id="page-wrapper" class="gray-bg">
                <% include ../partials/admin/header %>

                    <!--breakcrumb-->
                    <div class="row wrapper border-bottom white-bg page-heading">
                        <div class="col-lg-10">
                            <h2>E-Shopper product list</h2>
                            <ol class="breadcrumb">
                                <li>
                                    <a href="index.html">Home</a>
                                </li>
                                <li class="active">
                                    <strong>Orders</strong>
                                </li>
                            </ol>
                        </div>
                    </div>
                    <div class="wrapper wrapper-content animated fadeInRight ecommerce">
                        <div class="ibox-content m-b-sm border-bottom">
                            <div class="row">
                                <div class="col-sm-4">
                                    <div class="form-group">
                                        <label class="control-label" for="order_id">Order ID</label>
                                        <input type="text" id="order_id" name="order_id" value="" placeholder="Order ID" class="form-control">
                                    </div>
                                </div>
                                <div class="col-sm-4">
                                    <div class="form-group">
                                        <label class="control-label" for="status">Order status</label>
                                        <input type="text" id="status" name="status" value="" placeholder="Status" class="form-control">
                                    </div>
                                </div>
                                <div class="col-sm-4">
                                    <div class="form-group">
                                        <label class="control-label" for="customer">Customer</label>
                                        <input type="text" id="customer" name="customer" value="" placeholder="Customer" class="form-control">
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-sm-4">
                                    <div class="form-group">
                                        <label class="control-label" for="date_added">Date added</label>
                                        <div class="input-group date">
                                            <span class="input-group-addon">
                                                <i class="fa fa-calendar"></i>
                                            </span>
                                            <input id="date_added" type="text" class="form-control" value="03/04/2014">
                                        </div>
                                    </div>
                                </div>
                                <div class="col-sm-4">
                                    <div class="form-group">
                                        <label class="control-label" for="date_modified">Date modified</label>
                                        <div class="input-group date">
                                            <span class="input-group-addon">
                                                <i class="fa fa-calendar"></i>
                                            </span>
                                            <input id="date_modified" type="text" class="form-control" value="03/06/2014">
                                        </div>
                                    </div>
                                </div>
                                <div class="col-sm-4">
                                    <div class="form-group">
                                        <label class="control-label" for="amount">Amount</label>
                                        <input type="text" id="amount" name="amount" value="" placeholder="Amount" class="form-control">
                                    </div>
                                </div>
                            </div>

                        </div>

                        <div class="row">
                            <div class="col-lg-12">
                                <div class="ibox">
                                    <div class="ibox-content">

                                        <table class="footable table table-stripped toggle-arrow-tiny" data-page-size="15">
                                            <thead>
                                                <tr>

                                                    <th>Order ID</th>
                                                    <th data-hide="phone">Customer</th>
                                                    <th data-hide="phone">Amount</th>
                                                    <th data-hide="phone">Date added</th>
                                                    <th data-hide="phone,tablet">Date modified</th>
                                                    <th data-hide="phone">Status</th>
                                                    <th class="text-right">Action</th>

                                                </tr>
                                            </thead>
                                            <tbody>
                                                <tr>
                                                    <td>
                                                        3214
                                                    </td>
                                                    <td>
                                                        Customer example
                                                    </td>
                                                    <td>
                                                        $500.00
                                                    </td>
                                                    <td>
                                                        03/04/2015
                                                    </td>
                                                    <td>
                                                        03/05/2015
                                                    </td>
                                                    <td>
                                                        <span class="label label-primary">Pending</span>
                                                    </td>
                                                    <td class="text-right">
                                                        <div class="btn-group">
                                                            <a href="/admin/editorder" type="button" class="btn-success btn btn-xs">Edit</a>
                                                            <a href="/admin/delorder" type="button" class="btn-danger btn btn-xs">Delete</a>
                                                        </div>
                                                    </td>
                                                </tr>
                            
                                            </tbody>
                                            <tfoot>
                                                <tr>
                                                    <td colspan="7">
                                                        <ul class="pagination pull-right"></ul>
                                                    </td>
                                                </tr>
                                            </tfoot>
                                        </table>

                                    </div>
                                </div>
                            </div>
                        </div>

                    </div>
                    <% include ../partials/admin/footer %>
            </div>
            <!--page-wrapper-->
    </div>
    <!--wrapper-->
    <% include ../partials/admin/script %>
    <!-- Custom and plugin javascript -->
    <script src="../../public/javascripts/inspinia.js"></script>
    <script src="../../public/javascripts/plugins/pace/pace.min.js"></script>

    <!-- Data picker -->
    <script src="../../public/javascripts/plugins/datapicker/bootstrap-datepicker.js"></script>

    <!-- FooTable -->
    <script src="../../public/javascripts/plugins/footable/footable.all.min.js"></script>

    <!-- Page-Level Scripts -->
    <script>
        $(document).ready(function () {

            $('.footable').footable();

            $('#date_added').datepicker({
                todayBtn: "linked",
                keyboardNavigation: false,
                forceParse: false,
                calendarWeeks: true,
                autoclose: true
            });

            $('#date_modified').datepicker({
                todayBtn: "linked",
                keyboardNavigation: false,
                forceParse: false,
                calendarWeeks: true,
                autoclose: true
            });

        });

    </script>
</body>

</html>